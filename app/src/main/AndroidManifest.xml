<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.cs.mobileprogramming.claudioyosafat.lakukan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lakukan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lakukan_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddEditTodoActivity"
            android:parentActivityName=".ui.MainActivity" />

        <receiver android:name=".notification.AlarmReceiver" />
        <activity android:name=".ui.DescriptionActivity" />
    </application>

</manifest>